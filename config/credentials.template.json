{
    "_doc": "Credential definitions for n8n auto-provisioning. Secrets come from .env at provision time.",
    "credentials": [
        {
            "name": "postgres-production",
            "type": "postgres",
            "data_env_map": {
                "host": {
                    "value": "postgres"
                },
                "port": {
                    "value": 5432
                },
                "database": {
                    "env": "POSTGRES_DB"
                },
                "user": {
                    "env": "POSTGRES_USER"
                },
                "password": {
                    "env": "POSTGRES_PASSWORD"
                },
                "ssl": {
                    "value": "disable"
                },
                "allowUnauthorizedCerts": {
                    "value": false
                },
                "sshTunnel": {
                    "value": false
                }
            },
            "workflow_key": "postgres"
        },
        {
            "name": "ollama-production",
            "type": "ollamaApi",
            "data_env_map": {
                "baseUrl": {
                    "value": "http://ollama:11434"
                }
            },
            "workflow_key": "ollamaApi"
        },
        {
            "name": "gmail-oauth2-production",
            "type": "gmailOAuth2",
            "data_env_map": {
                "clientId": {
                    "env": "GMAIL_CLIENT_ID"
                },
                "clientSecret": {
                    "env": "GMAIL_CLIENT_SECRET"
                },
                "serverUrl": {
                    "value": ""
                },
                "sendAdditionalBodyProperties": {
                    "value": false
                },
                "additionalBodyProperties": {
                    "value": "{}"
                }
            },
            "workflow_key": "gmailOAuth2",
            "requires_oauth_flow": true
        },
        {
            "name": "google-calendar-production",
            "type": "googleCalendarOAuth2Api",
            "data_env_map": {
                "clientId": {
                    "env": "GMAIL_CLIENT_ID"
                },
                "clientSecret": {
                    "env": "GMAIL_CLIENT_SECRET"
                },
                "serverUrl": {
                    "value": ""
                },
                "sendAdditionalBodyProperties": {
                    "value": false
                },
                "additionalBodyProperties": {
                    "value": "{}"
                }
            },
            "workflow_key": "googleCalendarOAuth2Api",
            "requires_oauth_flow": true
        }
    ]
}