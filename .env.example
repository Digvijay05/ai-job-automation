# ──────────────────────────────────────────────────
# n8n Credentials
# ──────────────────────────────────────────────────
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_STRONG_PASSWORD
N8N_ENCRYPTION_KEY=CHANGE_ME_RANDOM_32_CHAR_KEY

# ──────────────────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────────────────
POSTGRES_DB=job_automation
POSTGRES_USER=automation_user
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# ──────────────────────────────────────────────────
# pgcrypto Symmetric Encryption Key
# (Used to encrypt/decrypt OAuth tokens in DB)
# ──────────────────────────────────────────────────
DB_ENCRYPTION_KEY=CHANGE_ME_RANDOM_64_CHAR_ENCRYPTION_KEY

# ──────────────────────────────────────────────────
# Webhook Security
# ──────────────────────────────────────────────────
WEBHOOK_SECRET=CHANGE_ME_RANDOM_WEBHOOK_SECRET_64_CHARS

# ──────────────────────────────────────────────────
# Ollama Cloud API
# ──────────────────────────────────────────────────
OLLAMA_API_URL=https://api.ollama.com/v1
OLLAMA_API_KEY=CHANGE_ME_OLLAMA_KEY
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT_MS=120000
OLLAMA_MAX_TOKENS=4096
OLLAMA_MAX_RETRIES=2

# ──────────────────────────────────────────────────
# Ngrok
# ──────────────────────────────────────────────────
NGROK_AUTHTOKEN=CHANGE_ME_NGROK_TOKEN
NGROK_PUBLIC_URL=https://YOUR_SUBDOMAIN.ngrok-free.app

# ──────────────────────────────────────────────────
# Scraper Config
# ──────────────────────────────────────────────────
SCRAPER_REQUEST_DELAY_MIN=2
SCRAPER_REQUEST_DELAY_MAX=5
SCRAPER_TIMEOUT_S=45

# ──────────────────────────────────────────────────
# Email Dispatch (Global Defaults)
# ──────────────────────────────────────────────────
# Gmail OAuth2 (shared app credentials)
GMAIL_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GMAIL_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET

# Outlook/Microsoft OAuth2 (shared app credentials)
OUTLOOK_CLIENT_ID=CHANGE_ME_MICROSOFT_CLIENT_ID
OUTLOOK_CLIENT_SECRET=CHANGE_ME_MICROSOFT_CLIENT_SECRET
OUTLOOK_TENANT_ID=common

# Throttling
EMAIL_SEND_DELAY_MS=3000
EMAIL_BATCH_SIZE=5
